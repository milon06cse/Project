@model List<Forum.Models.ForumThreadModel>
@{
    ViewBag.Title = "ThreadsBySection";
}

<h2>ThreadsBySection</h2>
<body>
   @* @Html.LabelFor(x=>x.Title):@Html.TextBoxFor(x=>x.Title)*@
    @if (Model != null)
             {
                 int i = 0;
                 var gd = new WebGrid(Model, canPage: true); 
        @gd.GetHtml(tableStyle: "webGrid table-hover table-bordered",
        headerStyle: "header", caption: "Threads..",
        alternatingRowStyle: "alt", rowStyle: "rowStyle",
                                                htmlAttributes: new { id = "Datatable"},

                columns: gd.Columns(
                gd.Column("Title", format: (item) => Html.ActionLink(Model[i++].Title, "AddThread", new { id = item.ThreadId.ToString() })),
            //gd.Column("Card", format: (item) => item.GetSelectLink(item.Card)),
             //   gd.Column("Card_Name", "Card Name", canSort: false, style: "width:200px;font-weight:bold;"),
                gd.Column("SectionId", "Section", canSort: false),
                gd.Column("ThreadId", "Thread", canSort: false)
         ))
             }
</body>